<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.example.lib_bean.bean.HomeRecyclerGroupBean" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_15"
        app:cardMaxElevation="@dimen/dp_5"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_margin="@dimen/dp_12"
            android:background='@{model.isSelect?@drawable/h_adapter_left_select_bg_on:@drawable/h_adapter_left_select_bg_no}'
            android:ellipsize="end"
            android:enabled="true"
            android:gravity="center"
            android:maxLines="1"
            android:text="@{model.leftTitle,default=我是标题}"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

</layout>