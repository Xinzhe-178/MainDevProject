<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15">

        <ImageView
            android:id="@+id/iv_seek"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_seek_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_5"
            android:ellipsize="end"
            android:enabled="true"
            android:gravity="center|start"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_13"
            app:layout_constraintBottom_toBottomOf="@id/iv_seek"
            app:layout_constraintEnd_toStartOf="@id/iv_arrow"
            app:layout_constraintStart_toEndOf="@id/iv_seek"
            app:layout_constraintTop_toTopOf="@id/iv_seek" />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@id/tv_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0.5"
            android:background="@color/gray_80"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>