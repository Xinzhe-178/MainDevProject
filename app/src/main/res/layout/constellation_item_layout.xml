<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="isSel"
            type="Boolean" />

        <variable
            name="model"
            type="com.example.lib_bean.bean.ConstellationBean.ConstellationItem" />

        <import type="android.widget.TextView" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_70">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/h_adapter_left_select_bg_on"
            android:gravity="center"
            android:paddingStart="@dimen/dp_17"
            android:paddingTop="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_17"
            android:paddingBottom="@dimen/dp_5"
            android:text="@{model.ConstellationName}"
            android:textColor="@{isSel?@color/red:@color/white}"
            android:textSize="@{isSel?@dimen/sp_17:@dimen/sp_14}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>