<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="view"
            type="com.example.networkpro.ui.view.AphorismsView" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false">

        <ImageView
            android:id="@+id/iv_user_logo"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_margin="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:src="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.networkpro.ui.view.CusSeekView
            android:id="@+id/v_seek"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5"
            app:layout_constraintBottom_toBottomOf="@id/iv_user_logo"
            app:layout_constraintEnd_toStartOf="@id/iv_collect"
            app:layout_constraintStart_toEndOf="@id/iv_user_logo"
            app:layout_constraintTop_toTopOf="@id/iv_user_logo" />

        <ImageView
            android:id="@+id/iv_collect"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_favorite_on"
            app:layout_constraintBottom_toBottomOf="@id/iv_user_logo"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_user_logo" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="h,4:1.4"
            app:layout_constraintTop_toBottomOf="@id/v_seek"
            app:onPageSelected="@{view.onPageSelected}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>