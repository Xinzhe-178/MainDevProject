<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="isSelectLeft"
            type="Boolean" />

        <variable
            name="viewModel"
            type="com.example.networkpro.viewmodel.UpdateFoodViewModel" />

        <variable
            name="viewUpdateContentIsShow"
            type="Boolean" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_update_food_bg" />

        <TextView
            android:id="@+id/tv_select_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            android:text="请选择类型"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_left"
            style="@style/updateFoodSelectTypeStyle"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@{isSelectLeft?@drawable/update_food_select_bg_on:@drawable/update_food_select_bg_no}"
            android:text="类型"
            android:textColor="@{isSelectLeft?@color/white:@color/gray_8f}"
            app:layout_constraintBottom_toBottomOf="@id/tv_select_hint"
            app:layout_constraintLeft_toRightOf="@id/tv_select_hint"
            app:layout_constraintRight_toLeftOf="@id/tv_right"
            app:layout_constraintTop_toTopOf="@id/tv_select_hint"
            app:onClickCall="@{viewModel.onSelectClick}"
            app:onIsClosureAntiShake="@{true}"
            app:onParams1="@{true}"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_right"
            style="@style/updateFoodSelectTypeStyle"
            android:background="@{isSelectLeft?@drawable/update_food_select_bg_no:@drawable/update_food_select_bg_on}"
            android:text="商品"
            android:textColor="@{isSelectLeft?@color/gray_8f:@color/white}"
            app:layout_constraintBottom_toBottomOf="@id/tv_select_hint"
            app:layout_constraintLeft_toRightOf="@id/tv_left"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_select_hint"
            app:onClickCall="@{viewModel.onSelectClick}"
            app:onIsClosureAntiShake="@{true}"
            app:onParams1="@{false}"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/ed_input_type"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@drawable/update_food_ed_bg_shape"
            android:hint="请输入类型名称"
            android:imeOptions="actionDone"
            android:maxLength="15"
            android:maxLines="2"
            android:paddingStart="@dimen/dp_15"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:visibility="@{isSelectLeft?View.VISIBLE:View.GONE}"
            app:layout_constraintLeft_toLeftOf="@id/tv_select_hint"
            app:layout_constraintRight_toLeftOf="@id/tv_add_type"
            app:layout_constraintTop_toBottomOf="@id/tv_select_hint"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <TextView
            android:id="@+id/tv_add_type"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@drawable/update_food_ed_bg_shape"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_6"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_6"
            android:text="添加"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:visibility="@{isSelectLeft?View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/ed_input_type"
            app:layout_constraintLeft_toRightOf="@id/ed_input_type"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/ed_input_type"
            app:onClickCall="@{viewModel.onAddTypeClick}"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_select_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_20"
            android:background="@drawable/update_food_select_bg_on"
            android:gravity="center"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:text="点击进行选择商品"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:visibility="@{isSelectLeft?View.GONE:View.VISIBLE}"
            app:layout_constraintTop_toBottomOf="@id/tv_select_hint"
            app:onClickCall="@{viewModel.onSelectShopClick}"
            tools:ignore="HardcodedText" />

        <com.example.networkpro.ui.view.UpdateFoodShopView
            android:id="@+id/view_update_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/dp_20"
            android:visibility="@{viewUpdateContentIsShow?View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_select_shop" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>