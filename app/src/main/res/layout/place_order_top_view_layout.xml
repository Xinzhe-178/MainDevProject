<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="view"
            type="com.example.networkpro.ui.view.PlaceOrderTopView" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent">

            <View
                android:id="@+id/v_center"
                android:layout_width="@dimen/dp_20"
                android:layout_height="0dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-100dp"
                android:layout_weight="1"
                android:background="@drawable/place_order_tab_on"
                android:gravity="center"
                android:text="店内就餐"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_right"
                app:layout_constraintStart_toStartOf="parent"
                app:onClickCall="@{view.onTabClick}"
                app:onIsClosureAntiShake="@{true}"
                app:onParams1="@{true}"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/place_order_tab_no_right"
                android:gravity="center"
                android:text="外卖配送"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_left"
                app:onClickCall="@{view.onTabClick}"
                app:onIsClosureAntiShake="@{true}"
                app:onParams1="@{false}"
                tools:ignore="HardcodedText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/place_order_top_top_white_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:gravity="center|start"
                android:text="茶百道（酒仙桥店）4号桌"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_test"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:gravity="center"
                android:text="测试"
                android:textColor="@color/red"
                android:textSize="@dimen/dp_20" />

        </LinearLayout>
    </LinearLayout>
</layout>