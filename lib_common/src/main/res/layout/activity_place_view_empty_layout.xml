<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_top"
            android:layout_width="@dimen/dp_230"
            android:layout_height="@dimen/dp_230"
            android:src="@drawable/ic_starplaceholder_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="暂无数据~"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@id/iv_top"
            app:layout_constraintEnd_toEndOf="@id/iv_top"
            app:layout_constraintStart_toStartOf="@id/iv_top"
            app:layout_constraintTop_toTopOf="@id/iv_top"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_place_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/place_retry_bg"
            android:gravity="center"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_8"
            android:text="点击重试"
            android:textColor="@color/pink"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="@id/iv_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_text"
            tools:ignore="HardcodedText" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>